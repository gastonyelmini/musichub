<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="4dp">

    <ImageView
        android:id="@+id/favoritesAlbumImage"
        android:layout_width="70dp"
        android:layout_height="70dp"/>

    <TextView
        android:id="@+id/favritesSongTitle"
        style="@style/Body"
        android:textStyle="bold"
        android:layout_toRightOf="@id/favoritesAlbumImage"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="35dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Titulo de la cancion"
        android:textColor="@color/color_white"/>

    <TextView
        android:id="@+id/favoritesSongArtist"
        style="@style/Body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:layout_toRightOf="@id/favoritesAlbumImage"
        android:layout_below="@id/favritesSongTitle"
        android:layout_alignStart="@id/favritesSongTitle"
        android:paddingBottom="10dp"
        android:text="Descripcion de la cancion"
        android:textColor="@color/color_white"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_keyboard_arrow_right_black_24dp"
        android:tint="@color/color_white"
        android:layout_marginEnd="13dp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>